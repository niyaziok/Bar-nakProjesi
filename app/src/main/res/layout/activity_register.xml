<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activityColor"
        tools:context=".RegisterActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/btnColor"
            android:backgroundTint="@color/btnColor"
            android:textColor="@color/btnColor"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtemail"
            android:hint="Email Adresi"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/maintxt" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.535"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/btnColor"
            android:backgroundTint="@color/btnColor"
            android:textColor="@color/btnColor"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpw"
            android:hint="Şifre"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtemail" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.535"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/btnColor"
            android:backgroundTint="@color/btnColor"
            android:textColor="@color/btnColor"
            android:textCursorDrawable="@drawable/cursor_color"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtpwagain"
            android:hint="Şifre Tekrar"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpw" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.535"/>
    <Button
            android:text="Kayıt"
            android:layout_width="90dp"
            android:layout_height="41dp"
            android:background="@drawable/rounded_button"
            android:textAllCaps="false"
            android:id="@+id/registerBtn"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/txtpwagain" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="44dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="86dp"
            android:layout_height="100dp"
            android:id="@+id/progressBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="9dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.498"
            app:layout_constraintHorizontal_bias="0.501" android:visibility="invisible"/>
    <TextView
            android:text="Kayıt Ol"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/btnColor"
            android:id="@+id/maintxt" android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Giriş Yap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/txtlogin" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/registerBtn" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="140dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.978"
            android:textColor="@color/btnColor"/>

</android.support.constraint.ConstraintLayout>