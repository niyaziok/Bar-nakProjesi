<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProblemActivity" android:visibility="visible">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars[2]"
            android:id="@+id/problemResmi"
            android:rotation="90"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:singleLine="false"
            android:scrollHorizontally="false"
            android:maxLength="150"
            android:id="@+id/problemTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Problemi Buraya Yazın" android:gravity="top"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/problemfotoBtn"/>
    <Button
            android:text="Problem Bıldır"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/problembildirBtn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.965"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/problemkonumBtn"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_location"
            android:id="@+id/problemkonumBtn" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/problemTxt" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.108"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_photo"
            android:id="@+id/problemfotoBtn"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/problemResmi"/>
</android.support.constraint.ConstraintLayout>