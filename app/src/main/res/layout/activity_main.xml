<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Bilgi Al"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bilgiBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sorunBtn" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/bilgiBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:text="Sorun Bildir"/>
    <Button
            android:text="Sahiplen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sahiplenmeBtn" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/sorunBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>